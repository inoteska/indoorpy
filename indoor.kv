
<Indoor>:
#    callbuton: btnCall
    door1buton: btnDoor1
    door2buton: btnDoor2
    rstplayerbutton: btnRestartPlayer
    settingsbutton: btnSetOptions

#    main_layout: main_layout

#    id: main_layout

#    orientation: 'vertical'

    Label:
        text: 'Wait...'
        font_size: '56dp'
        on_touch_down: app.dbg('HIIIIIT')
        pos: 0,40
        size: self.width,80

    Button:
        id: btnRestartPlayer
        size_hint: None,None
        height: '48dp'
        width: '96dp'
        pos: '10dp', '400dp'
        text: 'Rst Video'
        font_size: '12dp'
        on_press: root.callback_restart_player()

    Button:
        id: btnSetOptions
        size_hint: None,None
        height: '48dp'
        width: '96dp'
        pos: '690dp', '200dp'
        text: 'Settings'
        font_size: '12dp'
        on_press: root.callback_set_options()

#    Scatter:
#        pos: self.center_x - 5, 0
#        size: self.width, self.height

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '48dp'
        pos_x: '50dp' #self.pos
        size: self.size

        Button:
            id: btnCall
            text: 'No Call'
            font_size: '24dp'
            on_press: root.callback_btn_call()
        Button:
            id: btnDoor1
            text: 'Open Door 1'
            font_size: '24dp'
            on_press: root.callback_btn_door1()
        Button:
            id: btnDoor2
            text: 'Open Door 2'
            font_size: '24dp'
            on_press: root.callback_btn_door2()
