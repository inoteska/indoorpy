#: import smn kivy.uix.screenmanager
#: import math math

<Indoor>:
    lblBasic: txtBasicLabel
    door1buton: btnDoor1
    door2buton: btnDoor2
    settingsbutton: btnSetOptions
    scrClockButton: btnScreenClock
    videoLabel1: videoLabel1
    videoLabel2: videoLabel2
    videoLabel3: videoLabel3
    videoLabel4: videoLabel4

    ScreenManager:
        size_hint: 1, 1
        id: _screen_manager
        transition: smn.NoTransition() #FadeTransition()

        Screen:
            name: 'waitscr'
            id: waitscr
            on_enter: lblresult.text = 'Wait a moment...'
#            on_touch_down: _screen_manager.current = 'camera'

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'Information:'
                    font_size: self.height/5
                    color: 0.6,0.6,0.6,0.9
                Label:
                    text: ''
                    id: lblresult
                    font_size: self.height/3
                    color: 0.9,0.9,0.9,0.9
                Label:
                    text: ''
                    font_size: self.height/5
                    color: 0.6,0.6,0.6,0.9

        Screen:
            name: 'clock'
            id: clock
            on_touch_down: root.swap2camera()

            BoxLayout:
                MyClockWidget:

        Screen:
            name: 'digiclock'
            id: digiclock
            on_touch_down: root.swap2camera()

            BoxLayout:
                DigiClockWidget:

        Screen:
            name: 'camera'
            id: camera
            on_pre_enter: root.startScreenTiming()
            on_enter: root.enterCameraScreen()
            on_leave: root.finishScreenTiming()
            on_pre_leave: root.hidePlayers()

            BoxLayout:
                id: cameras
                orientation: 'vertical'
                size_hint: 1,.9
                pos: 0, 48

                BoxLayout:
                    id: cameras1
                    orientation: 'horizontal'

                    VideoLabel:
                        id: videoLabel1
                    VideoLabel:
                        id: videoLabel2

                BoxLayout:
                    id: cameras2
                    orientation: 'horizontal'

                    VideoLabel:
                        id: videoLabel3
                    VideoLabel:
                        id: videoLabel4


#            FloatLayout:
            Label:
                id: txtBasicLabel
                text: 'Wait...'
                height: '44dp'
                font_size: '40dp'
                pos: 0,50
                halign: 'center'
                size_hint_y: None

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: '48dp'
                size: self.size

                ImageButton:
                    id: btnScreenClock
                    text: 'C'
                    source: 'imgs/screen-off.png'
                    font_size: '24dp'
                    size_hint: .25, 1
                    on_press: root.callback_set_voice(-1)
                ImageButton:
                    id: btnDoor1
                    text: 'Open Door 1'
                    source: 'imgs/unlock.png'
                    font_size: '24dp'
                    on_press: root.callback_btn_door1()
                ImageButton:
                    id: btnDoCall
                    text: 'Do Call'
                    source: 'imgs/green-phone.png'
                    font_size: '24dp'
                    on_press: root.callback_btn_docall()
                ImageButton:
                    id: btnDoor2
                    text: 'Open Door 2'
                    source: 'imgs/unlock.png'
                    font_size: '24dp'
                    on_press: root.callback_btn_door2()
                ImageButton:
                    id: btnSetOptions
                    text: 'S'
                    source: 'imgs/settings.png'
                    font_size: '24dp'
                    size_hint: .25, 1
                    on_press: root.callback_set_voice(1)

        SetScreen:
            name: 'settings'
            id: settings


# wait for video label:

<VideoLabel@Label>:
    text: 'Wait...'
    font_size: self.height/4
    color: 0.3,0.3,0.9,0.9
    bgcolor: 0,0,0
    canvas.before:
        Color:
            rgb: self.bgcolor
        Rectangle:
            size: self.size
            pos: self.pos


# image button:

<ImageButton>:
    min_state_time: 0.5


#CLOCK:

<DigiClockWidget>:
    DigiClock:
        font_size: self.height/4
        color: 0.3,0.6,0.9,0.9


[ClockNumber@Label]:
    text: str(ctx.i)
    pos_hint: {"center_x": 0.5+0.42*math.sin(math.pi/6*(ctx.i-12)), "center_y": 0.5+0.42*math.cos(math.pi/6*(ctx.i-12))}
    font_size: self.height/10
    color: 0,0,0.6,0.9


<MyClockWidget>:
    face: face
    ticks: ticks
    canvas:
        Color:
            rgba: 1,1,1,1
    FloatLayout:
        id: face
        size_hint: None, None
        pos_hint: {"center_x":0.5, "center_y":0.5}
        size: 0.9*min(root.size), 0.9*min(root.size)
    Ticks:
        id: ticks
        r: min(root.size)*0.9/2


# ListView label:

<MyListViewLabel>:
    font_size: 16
    halign: 'left'
    text_size: self.size
