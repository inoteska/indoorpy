
<Indoor>:
    callbuton: btnCall
    door1buton: btnDoor1
    door2buton: btnDoor2

    orientation: 'vertical'

    Label:
        text: 'Wait...'
        font_size: '56dp'
        on_touch_down: app.dbg('HIIIIIT')

#    Scatter:
#        pos: self.center_x - 5, 0
#        size: self.width, self.height

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '48dp'

        Button:
            id: btnCall
            text: 'No Call'
            font_size: '24dp'
            on_press: root.callback_btn_call()
        Button:
            id: btnDoor1
            text: 'Open Door 1'
            font_size: '24dp'
            on_press: root.callback_btn_door1()
        Button:
            id: btnDoor2
            text: 'Open Door 2'
            font_size: '24dp'
            on_press: root.callback_btn_door2()
